<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/cashregister_voucher_green"
    android:orientation="vertical"
    android:padding="@dimen/cashregister_margin_20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cashregister_coupon_item_bg"
        android:padding="@dimen/cashregister_margin_10dp">

        <TextView
            android:id="@id/cashregister_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/cashregister_margin_10dp"
            android:ems="1"
            android:textColor="@color/cashregister_white"
            android:textSize="@dimen/cashregister_rechare_text_size"
            tools:text="代金券" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cashregister_coupon_name"
            android:orientation="vertical">

            <TextView
                android:id="@id/cashregister_coupon_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/cashregister_margin_10dp"
                android:layout_weight="1"
                android:textColor="@color/cashregister_white"
                android:textSize="@dimen/cashregister_rechare_text_size"
                tools:text="20元" />

            <TextView
                android:id="@id/cashregister_coupon_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/cashregister_margin_10dp"
                android:layout_weight="1"
                android:textColor="@color/cashregister_white"
                android:textSize="@dimen/cashregister_member_tabl_text_size"
                tools:text="满100元可用" />

            <TextView
                android:id="@id/cashregister_coupon_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/cashregister_margin_10dp"
                android:layout_weight="1"
                android:textColor="@color/cashregister_white"
                android:textSize="@dimen/cashregister_member_tabl_text_size"
                tools:text="2018.11.30-2018.12.30" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>