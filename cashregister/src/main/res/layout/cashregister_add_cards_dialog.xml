<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:background="@color/cashregister_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/cashregister_margin_20dp">

    <LinearLayout
        android:id="@id/cashregister_suc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@id/cashregister_num_notice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/cashregister_margin_40dp"
            android:text="026546"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cashregister_margin_20dp"
            android:layout_marginTop="@dimen/cashregister_margin_40dp"
            android:layout_marginRight="@dimen/cashregister_margin_20dp"
            android:layout_marginBottom="@dimen/cashregister_margin_40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@id/cashregister_end_make_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cashregister_margin_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/cashregister_margin_10dp"
                android:text="结束制卡" />

            <TextView
                android:id="@id/cashregister_make_card_con"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cashregister_margin_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/cashregister_margin_10dp"
                android:text="继续制卡" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/cashregister_make_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/cashregister_margin_20dp"
            android:text="请核对卡号"
            android:textColor="@color/cashregister_quit_color"
            android:textSize="18sp" />

        <TextView
            android:id="@id/cashregister_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/cashregister_margin_20dp"
            android:text="026546"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cashregister_margin_40dp"
            android:layout_marginTop="@dimen/cashregister_margin_20dp"
            android:layout_marginRight="@dimen/cashregister_margin_40dp"
            android:background="@drawable/cashregister_member_search_edit_bg"
            android:hint="请刷卡"
            android:padding="@dimen/cashregister_margin_10dp"
            android:textSize="@dimen/cashregister_login_edite_size">

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cashregister_margin_20dp"
            android:layout_marginTop="@dimen/cashregister_margin_20dp"
            android:layout_marginRight="@dimen/cashregister_margin_20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@id/cashregister_cancel_make_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cashregister_margin_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/cashregister_margin_10dp"
                android:text="结束制卡" />

            <TextView
                android:id="@id/cashregister_jump_card_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cashregister_margin_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/cashregister_margin_10dp"
                android:text="跳过该卡号" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
