<resources>

    <!-- Base application theme. -->
    <style name="ordedishes_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ordedishes_colorAccent</item>
    </style>

    <style name="ordedishes_dialog_round_corner" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="ordedishes_translucent" parent="Theme.AppCompat.NoActionBar">
        　　　　
        <item name="android:windowBackground">@color/ordedishes_black_08</item>
        　　　　
        <item name="android:windowIsTranslucent">true</item>

    </style>
</resources>
