<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:background="@color/ordedishes_white_08"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@id/ordedishes_main_itme_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ordedishes_home_icon_data" />

        <TextView
            android:id="@id/ordedishes_main_itme_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ordedishes_10dp"
            android:textColor="@color/white"
            tools:text="会员" />
    </LinearLayout>
</LinearLayout>